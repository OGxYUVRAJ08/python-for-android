from kivy.app import App
from kivy.uix.boxlayout import BoxLayout  # Import BoxLayout
from kivy.uix.label import Label
from kivy.uix.textinput import TextInput
from kivy.uix.button import Button

class LoginScreen(BoxLayout):  # Class definition
    def __init__(self, **kwargs):
        super(LoginScreen, self).__init__(**kwargs)

        # Add a username input
        self.username_input = TextInput(hint_text='Username', multiline=False)
        self.add_widget(self.username_input)

        # Add a password input
        self.password_input = TextInput(hint_text='Password', password=True, multiline=False)
        self.add_widget(self.password_input)

        # Add a submit button
        self.submit_button = Button(text='Login')
        self.submit_button.bind(on_press=self.login)
        self.add_widget(self.submit_button)

    def login(self, instance):
        username = self.username_input.text
        password = self.password_input.text
        # Add your login logic here
        print(f'Username: {username}, Password: {password}')

class MyApp(App):
    def build(self):
        return LoginScreen()

if __name__ == '__main__':
    MyApp().run()
